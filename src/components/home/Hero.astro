<style>
    .hero-hidden {
        opacity: 0;
        transition: opacity 0.5s ease-in-out;
    }
    
    .hero-visible {
        opacity: 1;
    }
</style>

<script>
    // Show the hero when the iframe is loaded
    document.addEventListener('DOMContentLoaded', () => {
        const heroElement = document.querySelector('.hero-component');
        const splineIframe = document.querySelector('#hero-spline');
        
        if (splineIframe) {
            splineIframe.addEventListener('load', () => {
                if (heroElement) {
                    // Add a small delay to ensure the iframe content is fully rendered
                    setTimeout(() => {
                        heroElement.classList.remove('hero-hidden');
                        heroElement.classList.add('hero-visible');
                    }, 100); // 200ms delay (100ms after preloader starts fading)
                }
            });
        }
        
        // Fallback in case the iframe load event doesn't fire
        setTimeout(() => {
            if (heroElement && heroElement.classList.contains('hero-hidden')) {
                heroElement.classList.remove('hero-hidden');
                heroElement.classList.add('hero-visible');
            }
        }, 5500); // Slightly longer than the preloader timeout
    });
</script> 