    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const serviceCards = document.querySelectorAll('.service-card');
            const prevButton = document.querySelector('.nav-prev');
            const nextButton = document.querySelector('.nav-next');
            
            if (!serviceCards.length || !prevButton || !nextButton) return;
            
            let currentIndex = 0;
            const totalCards = serviceCards.length;
            let isTransitioning = false;
            
            // Function to update card positions
            const updateCards = () => {
                if (isTransitioning) return;
                isTransitioning = true;
                
                serviceCards.forEach((card, index) => {
                    // Remove all position classes
                    card.classList.remove('active', 'prev', 'next', 'back', 'hidden-card');
                    
                    // Calculate relative position
                    const position = (index - currentIndex + totalCards) % totalCards;
                    
                    // Apply appropriate class based on position
                    if (position === 0) {
                        card.classList.add('active');
                    } else if (position === 1 || position === (totalCards - 1)) {
                        card.classList.add(position === 1 ? 'next' : 'prev');
                    } else if (position === 2 || position === (totalCards - 2)) {
                        card.classList.add('back');
                    } else {
                        card.classList.add('hidden-card');
                    }
                });
                
                // Update button states
                prevButton.disabled = false;
                nextButton.disabled = false;
                
                // Reset transition lock after animation completes
                setTimeout(() => {
                    isTransitioning = false;
                }, 500);
            };
            
            // Go to specific slide
            const goToSlide = (index) => {
                if (isTransitioning) return;
                currentIndex = index;
                updateCards();
            };
            
            // Handle navigation buttons
            prevButton.addEventListener('click', () => {
                if (isTransitioning) return;
                currentIndex = (currentIndex - 1 + totalCards) % totalCards;
                updateCards();
            });
            
            nextButton.addEventListener('click', () => {
                if (isTransitioning) return;
                currentIndex = (currentIndex + 1) % totalCards;
                updateCards();
            });
            
            // Handle keyboard navigation
            document.addEventListener('keydown', (e) => {
                if (isTransitioning) return;
                if (e.key === 'ArrowLeft') {
                    currentIndex = (currentIndex - 1 + totalCards) % totalCards;
                    updateCards();
                }
                if (e.key === 'ArrowRight') {
                    currentIndex = (currentIndex + 1) % totalCards;
                    updateCards();
                }
            });
            
            // Handle touch events for swipe
            let touchStartX = 0;
            let touchEndX = 0;
            
            const handleTouchStart = (e) => {
                touchStartX = e.touches[0].clientX;
            };
            
            const handleTouchMove = (e) => {
                touchEndX = e.touches[0].clientX;
            };
            
            const handleTouchEnd = () => {
                if (isTransitioning) return;
                
                const swipeThreshold = 50;
                if (touchStartX - touchEndX > swipeThreshold) {
                    // Swipe left
                    currentIndex = (currentIndex + 1) % totalCards;
                    updateCards();
                } else if (touchEndX - touchStartX > swipeThreshold) {
                    // Swipe right
                    currentIndex = (currentIndex - 1 + totalCards) % totalCards;
                    updateCards();
                }
            };
            
            document.querySelector('.services-viewport').addEventListener('touchstart', handleTouchStart, false);
            document.querySelector('.services-viewport').addEventListener('touchmove', handleTouchMove, false);
            document.querySelector('.services-viewport').addEventListener('touchend', handleTouchEnd, false);
            
            // Initialize the carousel
            updateCards();
        });
    </script>
