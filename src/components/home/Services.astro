    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const servicesWrapper = document.querySelector('.services-scroll-wrapper');
            const serviceCards = document.querySelectorAll('.service-card');
            const prevButton = document.querySelector('.nav-prev');
            const nextButton = document.querySelector('.nav-next');
            
            if (!servicesWrapper || !serviceCards.length || !prevButton || !nextButton) return;
            
            let currentIndex = 0;
            
            // Go to specific slide
            const goToSlide = (index) => {
                if (index < 0) index = 0;
                if (index >= serviceCards.length) index = serviceCards.length - 1;
                
                currentIndex = index;
                
                // Scroll to the card
                serviceCards[index].scrollIntoView({ behavior: 'smooth', inline: 'start' });
                
                // Update button states
                prevButton.disabled = index === 0;
                prevButton.classList.toggle('opacity-50', index === 0);
                nextButton.disabled = index === serviceCards.length - 1;
                nextButton.classList.toggle('opacity-50', index === serviceCards.length - 1);
            };
            
            // Handle navigation buttons
            prevButton.addEventListener('click', () => goToSlide(currentIndex - 1));
            nextButton.addEventListener('click', () => goToSlide(currentIndex + 1));
            
            // Handle keyboard navigation
            document.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowLeft') goToSlide(currentIndex - 1);
                if (e.key === 'ArrowRight') goToSlide(currentIndex + 1);
            });
            
            // Initialize button states
            prevButton.disabled = true;
            prevButton.classList.add('opacity-50');
            
            // Set initial slide
            goToSlide(0);
        });
    </script>
