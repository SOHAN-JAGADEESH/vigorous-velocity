<header class="fixed w-full z-50 bg-black/80 backdrop-blur-md">
	<div class="container mx-auto px-6 py-6">
		<div class="flex justify-between items-center">
			<!-- Logo and Company Name -->
			<a href="/" class="flex items-center space-x-3">
				<img src="/logo.svg" alt="AVM Nexus Logo" class="h-10 w-10" />
				<div>
					<span class="text-2xl font-heading font-bold text-accent">AVM</span>
					<span class="text-2xl font-heading font-bold text-white">NEXUS</span>
				</div>
			</a>

			<!-- Navigation Links - Centered -->
			<nav class="hidden md:flex absolute left-1/2 transform -translate-x-1/2 space-x-10">
				<a href="/" class="text-white hover:text-accent transition-colors font-medium">Home</a>
				<a href="/about" class="text-white hover:text-accent transition-colors font-medium">About</a>
			</nav>

			<!-- Contact Button -->
			<a href="/contact" class="hidden md:inline-block px-6 py-2 rounded-full bg-accent text-primary font-medium hover:bg-accent/90 transition-colors">
				Contact Us
			</a>

			<!-- Mobile Menu Button -->
			<button id="mobile-menu-button" class="md:hidden text-white hover:text-accent">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
				</svg>
			</button>
		</div>
	</div>
	<!-- Mobile Menu -->
	<div id="mobile-menu" class="md:hidden hidden bg-primary-dark border-t border-accent/20 absolute w-full">
		<div class="container mx-auto py-4 flex flex-col space-y-4 px-6">
			<a href="/" class="text-white hover:text-accent transition-colors">Home</a>
			<a href="/about" class="text-white hover:text-accent transition-colors">About</a>
			<a href="/contact" class="text-white hover:text-accent transition-colors">Contact Us</a>
		</div>
	</div>
</header>

<script is:inline>
	// Mobile menu toggle
	document.addEventListener('DOMContentLoaded', () => {
		const mobileMenuButton = document.getElementById('mobile-menu-button');
		const mobileMenu = document.getElementById('mobile-menu');

		mobileMenuButton?.addEventListener('click', () => {
			mobileMenu?.classList.toggle('hidden');
		});
	});
</script>
