<header class="fixed w-full z-50 transition-all duration-300 flex justify-center" id="main-header">
	<div class="container transition-all duration-300 px-6 py-2 max-w-[95%] mt-4" id="header-container">
		<div class="flex justify-between items-center">
			<!-- Logo and Company Name -->
			<a href="/" class="flex items-center space-x-3">
				<img src="/AV_logo.jpg" alt="AVM Nexus Logo" class="h-10 w-15" />
				<!-- <div>
					<span class="text-2xl font-heading font-bold text-accent">AVM</span>
					<span class="text-2xl font-heading font-bold text-white">NEXUS</span>
				</div> -->
			</a>

			<!-- Navigation Links - Centered -->
			<nav class="hidden md:flex absolute left-1/2 transform -translate-x-1/2 space-x-10">
				<a href="/" class="text-white hover:text-accent transition-colors font-medium">Home</a>
				<a href="/about" class="text-white hover:text-accent transition-colors font-medium">About</a>
			</nav>

			<!-- Contact Button -->
			<a href="/contact" class="contact-btn hidden md:inline-block">
				Contact Us!
			</a>

			<!-- Mobile Menu Button -->
			<button id="mobile-menu-button" class="md:hidden text-white hover:text-accent">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
				</svg>
			</button>
		</div>
	</div>
	<!-- Mobile Menu -->
	<div id="mobile-menu" class="md:hidden hidden bg-primary-dark border-t border-accent/20 absolute w-full">
		<div class="container mx-auto py-4 flex flex-col space-y-4 px-6">
			<a href="/" class="text-white hover:text-accent transition-colors">Home</a>
			<a href="/about" class="text-white hover:text-accent transition-colors">About</a>
			<a href="/contact" class="text-white hover:text-accent transition-colors">Contact Us</a>
		</div>
	</div>
</header>

<style>
	/* Base styles for the header */
	#main-header {
		background-color: rgba(0, 0, 0, 0.8);
		backdrop-filter: blur(8px);
	}
	
	:root {
		--accent-color: 255, 215, 0; /* Gold color in RGB */
	}
	
	/* Contact Button Styles */
	.contact-btn {
		padding: 10px 20px;
		border: unset;
		border-radius: 15px;
		color: #FFD700;
		z-index: 1;
		background: #000000;
		position: relative;
		font-weight: 600;
		font-size: 15px;
		box-shadow: 4px 8px 19px -3px rgba(0,0,0,0.27);
		transition: all 250ms;
		overflow: hidden;
	}

	.contact-btn::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		height: 100%;
		width: 0;
		border-radius: 15px;
		background-color: #FFD700;
		z-index: -1;
		box-shadow: 4px 8px 19px -3px rgba(0,0,0,0.27);
		transition: all 250ms;
	}

	.contact-btn:hover {
		color: #212121;
	}

	.contact-btn:hover::before {
		width: 100%;
	}
</style>

<script is:inline>
	document.addEventListener('DOMContentLoaded', () => {
		const mobileMenuButton = document.getElementById('mobile-menu-button');
		const mobileMenu = document.getElementById('mobile-menu');
		const header = document.getElementById('main-header');
		const headerContainer = document.getElementById('header-container');

		// Mobile menu toggle
		mobileMenuButton?.addEventListener('click', () => {
			mobileMenu?.classList.toggle('hidden');
		});

		// Scroll effect for header
		window.addEventListener('scroll', () => {
			if (window.scrollY > 50) {
				// Scrolled state
				header.style.backgroundColor = 'rgba(0, 0, 0, 0.9)';
				headerContainer.style.borderRadius = '0.75rem';
				headerContainer.style.boxShadow = '0 6px 15px -2px rgba(var(--accent-color), 0.2), 0 0 8px -2px rgba(var(--accent-color), 0.1)';
				headerContainer.style.marginTop = '1rem';
				headerContainer.style.border = '1px solid rgba(var(--accent-color), 0.3)';
			} else {
				// Top state
				header.style.backgroundColor = 'rgba(0, 0, 0, 0.8)';
				headerContainer.style.borderRadius = '0.75rem';
				headerContainer.style.boxShadow = 'none';
				headerContainer.style.marginTop = '1rem';
				headerContainer.style.border = 'none';
			}
		});

		// Initial check in case page is loaded scrolled down
		if (window.scrollY > 50) {
			header.style.backgroundColor = 'rgba(0, 0, 0, 0.9)';
			headerContainer.style.borderRadius = '0.75rem';
			headerContainer.style.boxShadow = '0 6px 15px -2px rgba(var(--accent-color), 0.2), 0 0 8px -2px rgba(var(--accent-color), 0.1)';
			headerContainer.style.marginTop = '1rem';
			headerContainer.style.border = '1px solid rgba(var(--accent-color), 0.3)';
		}
	});
</script>
